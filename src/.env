# .env - Environment variables for local development
# Copy this to .env and fill in your actual values.
# DO NOT COMMIT THE ACTUAL .ENV FILE WITH SENSITIVE DATA TO VERSION CONTROL.

# --- Application Settings ---
PROJECT_NAME="Waplus Dashboard"
PROJECT_VERSION="0.1.0-dev" # Or keep as in config.py
DEBUG=True # Set to False for production-like testing, True for development features

# --- API Configuration ---
# API_V1_STR="/api/v1" # Usually defined in config.py, but can be overridden

# --- CORS Origins ---
# Comma-separated list of frontend origins allowed to access the API
# For local React dev (port 3000) and Vue dev (port 5173) examples:
# BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://your.frontend.domain"

# --- Database Configuration (for local development or Docker Compose) ---
# These will be used by docker-compose.yml and directly if running app locally without compose
POSTGRES_SERVER=db # For Docker Compose (service name)
# POSTGRES_SERVER=localhost # If running Postgres directly on host for local dev without Docker
POSTGRES_USER=waplus_user
POSTGRES_PASSWORD=adminadmin
POSTGRES_DB=waplus_dashboard_db
POSTGRES_PORT_HOST=5432
DATABASE_URL="postgresql://waplus_user:adminadmin@db:5432/waplus_dashboard_db"

ALLOWED_HOSTS = ["*"]

# --- JWT Token Configuration ---
# !!! IMPORTANT: For any persistent deployment, set a FIXED, STRONG, RANDOM SECRET_KEY !!!
# If not set, config.py generates a new one on each app start, invalidating old tokens.
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your_super_secret_random_key_for_development_must_be_the_same_across_restarts_if_tokens_should_persist" # !!! CHANGE AND KEEP CONSISTENT !!!
ACCESS_TOKEN_EXPIRE_MINUTES=1440 # 1 day for dev, adjust as needed
# ALGORITHM="HS256" # Usually defined in config.py

# --- Redis Configuration (for local development or Docker Compose) ---
REDIS_HOST=redis # For Docker Compose (service name)
# REDIS_HOST=localhost # If running Redis directly on host
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD= # Set if your Redis instance has a password
# REDIS_URL= # Optional: If you want to override the assembled one

# --- GeoServer Configuration (for Docker Compose or local setup) ---
# Base URL for GeoServer, without /rest or /wms etc.
GEOSERVER_URL="http://geoserver:8080/geoserver" # For Docker Compose
# GEOSERVER_URL="http://localhost:8080/geoserver" # If running GeoServer directly on host
GEOSERVER_ADMIN_USER=admin
GEOSERVER_ADMIN_PASSWORD=geoserver # Default GeoServer password, CHANGE if secured
GEOSERVER_ADMIN_EMAIL=taheri.sara1991@gmail.com

# --- Data Ingestion Paths (Example, might not be relevant if paths are fixed in code/config) ---
# WA_PLUS_DATA_SOURCE_PATH="/path/to/your/local/raw_wa_plus_data"
# WA_PLUS_PROCESSED_DATA_PATH="/path/to/your/local/processed_wa_plus_data"

# --- Operational ---
